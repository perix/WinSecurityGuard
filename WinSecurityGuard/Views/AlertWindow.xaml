<Window x:Class="WinSecurityGuard.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Security Alert" Height="150" Width="400"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#2D2D30" Topmost="True" ShowInTaskbar="False"
        AllowsTransparency="True" WindowStartupLocation="Manual">
    
    <Border BorderBrush="#FF4444" BorderThickness="2" CornerRadius="5">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Icon -->
            <TextBlock Text="⚠️" FontSize="40" VerticalAlignment="Center" Foreground="#FF4444" Margin="0,0,15,0"/>
            
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="TxtTitle" Text="ALLARME SICUREZZA" Foreground="#FF4444" FontWeight="Bold" FontSize="16"/>
                <TextBlock x:Name="TxtMessage" Text="Rilevata anomalia di sicurezza." Foreground="White" TextWrapping="Wrap" Margin="0,5,0,0"/>
                <Button Content="Chiudi" HorizontalAlignment="Right" Margin="0,10,0,0" Click="Close_Click" Padding="10,2"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
