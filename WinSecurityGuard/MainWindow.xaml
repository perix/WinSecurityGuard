<Window x:Class="WinSecurityGuard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Storico Eventi di Sicurezza" Height="450" Width="800"
        Closing="Window_Closing"> <!-- Handle close to hide instead of exit if desired, or just standard close -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Storico Eventi Rilevati" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <DataGrid x:Name="LogsGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Data/Ora" Binding="{Binding Timestamp}" Width="150"/>
                <DataGridTextColumn Header="Categoria" Binding="{Binding Category}" Width="150"/>
                <DataGridTextColumn Header="Messaggio" Binding="{Binding Message}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
